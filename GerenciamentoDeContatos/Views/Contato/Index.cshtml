@model List<Contato>

@{
    ViewData["Title"] = "Todos os Contatos";
}

<div class="text-center">
    <h1 class="display-4">Todos os seus contatos estarão aqui!!</h1>
   
</div>
<a type="button" class="btn btn-success" asp-controller="Contato" asp-action="CriarContato" >Salvar novo Contato</a>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">E-mail</th>
            <th scope="col">Telefone</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach(Contato item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.Sobrenome</td>
                    <td>@item.Email</td>
                    <td>@item.Telefone</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a type="button" class="btn btn-warning">Editar</a>
                            <a type="button" class="btn btn-danger">Apagar Contato</a>
                        </div>
                    </td>

                </tr>
            }
        }
       
    </tbody>
</table>